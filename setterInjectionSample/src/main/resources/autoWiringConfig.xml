<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="address" class="autowired.Address">
        <property name="hno" value="1"> </property>
        <property name="streetName" value="Aldie"> </property>
        <property name="city" value="Virginia"> </property>
        <property name="state" value="USA"> </property>
    </bean>

<!--    <bean id="employee" class="autowired.Employee" autowire="byType">
        <property name="id" value="1"></property>
        <property name="name" value="abhi"></property>
    </bean>-->

    <bean id="employee" class="autowired.Employee" autowire="byName">
        <property name="id" value="1"></property>
        <property name="name" value="abhi"></property>
    </bean>

</beans>